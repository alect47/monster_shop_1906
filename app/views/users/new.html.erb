
<!-- < % # change to form_for %> -->
<%= form_tag '/users', method: :post do %>
  <%= text_field_tag :name, @user.name, placeholder: "Name"%>
  <%= text_field_tag :address, nil, placeholder: "Address"%>
  <%= text_field_tag :city, nil, placeholder: "City"%>
  <%= text_field_tag :state, nil, placeholder: "State"%>
  <%= text_field_tag :zip, nil, placeholder: "Zip"%>
  <%= text_field_tag :email, nil, placeholder: "Email"%>
  <%= password_field_tag :password, nil, placeholder: "Password"%>
  <%= password_field_tag :password_confirmation, nil, placeholder: "Confirm Password"%>
  <%= submit_tag "Submit" %>
<%end %>
